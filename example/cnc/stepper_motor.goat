var StepperMotorParameters =
# {
    gpioEnable : "null",
    gpioStep : "null",
    gpioDirection : "null",
    scalingFactor : 1.0,
};

var StepperMotor =
# {
    init : $(params)
    {
        if (!params.instanceof(StepperMotorParameters))
            throw new Exception.IllegalArgument();

        for (var key in params)
        {
            if (params.contains(key))
                this[key] = params[key];
        }

        ports[gpioEnable].write(true);
        this.targetPosition = 0;
        this.targetVelocity = 0;
        this.doubleScalingFactor = scalingFactor * 2.0;
    },

    setTargetPosition : $(position, velocity)
    {
        if (position == targetPosition && velocity == targetVelocity)
            return;
        targetPosition = position;
        targetVelocity = velocity;

        var scaledPosition = round(position * doubleScalingFactor);
        var scaledVelocity = round(velocity * doubleScalingFactor);
        if (scaledVelocity == 0)
        {
            ports[gpioStep].pulse(0);
        }
        else
        {
            var period = 1000000000 / scaledVelocity;
            if (period >= 0)
            {
                ports[gpioDirection].write(true);
                ports[gpioStep].pulse(period,  1, scaledPosition);
            }
            else
            {
                ports[gpioDirection].write(false);
                ports[gpioStep].pulse(-period, -1, scaledPosition);
            }
        }
    },

    getPosition : $()
    {
        return ports[gpioStep].count() / doubleScalingFactor;
    }
};
