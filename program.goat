if (!ports.init())
    exit();

ports.gpio27.write(false);
ports.gpio18.write(false);
var count = 100000;
var increment = 25000;
var timestamp = 0;
var value = false;
for (var i = 0; i < count; i++)
{
    value = !value;
    timestamp += increment;
    ports.gpio4.schedule(timestamp, value, 1);
}
ports.run();
while(ports.gpio4.count() < count)
{
}
ports.gpio27.write(true);
