import "bitmap.goat";

var x = 64;
var y = 64;

var bmp = new Bmp24(x, y);
var _x = x * 1.0;
var _y = y * 1.0;
for (var r = 0; r < x; r++)
{
    for (var g = 0; g < y; g++)
    {
        bmp.set(r, g, {r: r / _x, g: g / _y, b: 1 - g / _y});
    }
}

var file = open("image.bmp", File.Mode.WRITE);
file.write(bmp.toByteArray());
file.close();

println(bmp.toByteArray());
