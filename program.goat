import "web_server.goat";

var counter = 0;

var server = HttpServer.create(8001, $(request)
{
    println("request: " + request);

    counter++;

    var response = "Counter value: " + counter;
    return {
        content: response.encode("utf8"),
        type: "text/html"
    };
});

while(true)
{
    server.tick();
}
